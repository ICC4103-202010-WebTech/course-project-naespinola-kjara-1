<h2 class="text-info"> ðŸ’« <%= @organization.name %> </h2>
<div id="container">
  <div class="row">
    <div class="col-3">
      <div class="row mb-3 mt-3 ">
      <div class="text-center figure-img img-fluid rounded">
        <%= image_tag(@organization.image.thumb.url, class: "figure-img img-fluid rounded") %>
      </div>
    </div>
      <aside id="organization_links">
        <ul class="table-success" id="links">
          <button type="button" class="list-group-item list-group-item-action p-2">Calendar </button>

          <select class="custom-select">
            <option selected>Members</option>
            <% @events1.each do |events| %>
            <option value="i"><%=  events.user.username %></option>
            <% end %>
          </select>

          <button type="button" class="list-group-item list-group-item-action p-2">Videos</button>
          <button type="button" class="list-group-item list-group-item-action p-2">Documents</button>
        </ul>
      </aside>
      <div class="text-center mb-2">
        <%= link_to " Edit ", edit_organization_path(@organization) , class: ["btn", "btn-primary"] %>
        <%= link_to "New Organization", new_organization_path, class: ["btn", "btn-info"] %>
        <%= link_to "Back", organizations_path, class: ["btn", "btn-primary"] %>

      </div>
    </div>
    <div class="col">
      <dl id="organization_info">
        <dt class="text-success">Description </dt>
        <dd>â€¢ <%= @organization.description %> <%= @organization.rich_text%></dd>
      </dl>
      <div class="row">
        <% @events2.each do |event| %>
          <%= render partial: 'events/event_tile', locals: { event: event } %>
        <% end %>
      </div>
    </div>
  </div>
  <br>

</div>

