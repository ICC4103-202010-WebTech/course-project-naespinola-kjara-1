<%= form_with model: [@event, @user, @comment], local: true do |form| %>
  <%= errors_for @comment %>
  <div class="form-group">
    <%= form.label :rich_text, class:"text-success font-weight-bold" %>
    <%= form.text_area :rich_text, class: "form-control" %>
     </div>
  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
  </div>
  <div class="form-group">
    <%= form.submit class: ["btn", "btn-primary"] %>
    <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    <%= link_to 'Destroy', comment_path(@comment.id) , method: :delete,class: ["btn", "btn-primary"] %>
  </div>
<% end %>
