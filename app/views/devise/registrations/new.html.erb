<div class="container">
<div class="row ml-0 mt-3">
  <h2 class="text-info font-weight-bold">Sign up to VED</h2>
</div>
<div class="row ml-0 mt-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= errors_for resource %>

    <div class="form-group">
      <%= f.label :username, class:"text-success font-weight-bold" %><br />
      <%= f.text_field :username, autocomplete: "username", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :first_name, class:"text-success font-weight-bold" %><br />
      <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class:"text-success font-weight-bold" %><br />
      <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :location, class:"text-success font-weight-bold" %><br />
      <%= f.text_field :location, autocomplete: "location", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :short_bio, class:"text-success font-weight-bold" %><br />
      <%= f.text_area :short_bio, autocomplete: "short_bio", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, class:"text-success font-weight-bold" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class:"text-success font-weight-bold" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class:"text-success font-weight-bold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>



    <div class="form-group">
      <%= f.label :terms_of_service, class:"text-success font-weight-bold" %><br>
      <i class="text-warning">(Please read Terms of Use and Terms of Service before to click Sign up)</i>

      <%= f.check_box :terms_of_service, class: "form-control" %>
    </div>




      <div class="form-group actions">
        <%= f.submit "Sign up", class: [ "btn", "btn-primary"] %>

      </div>
    <%end %>

</div>
</div>
<br>
