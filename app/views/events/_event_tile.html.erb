<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <div class = "h-25 d-inline-block bg-info" size="wide: 400px;">
      <%= link_to image_tag(event.image.thumb.url, class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef"), url_for(event) %>
    </div>
    <div class="card-body">
      <p class="card-text"><%= link_to event.title, event %></p>
      <p class="card-text"><%= event.location %></p>
      <p class="card-text"><%= event.created_at %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", event %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_event_path(event) %></button>
        </div>
        <small class="text-muted"><%= "#{(event.created_at.to_date - DateTime.now.to_date).to_i} days left!" %></small>
      </div>
    </div>
  </div>
</div>