<div class="row ml-0">
  <%= form_with(model: event, local: true) do |form| %>
    <!--errors_for event -->
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :private %>
      <%= form.check_box  :private, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :include_organization %>
      <%= form.check_box :include_organization, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :user_id %>
      <%= form.text_field :user_id, class: "form-control" %>
    </div>
    <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%=  dates_to_vote_section_title %></h5>
      <p><%= dates_to_vote_instruction_text %></p>
      <%=form.fields_for :dates_to_votes do |dates_to_votes_form| %>
        <div class="form-group">
          <%= dates_to_votes_form.label :date %>
          <%=dates_to_votes_form.datetime_local_field :date, class: "form-control" %>

          <% if action_name == 'edit' %>
            <%= dates_to_votes_form.label "Delete"%>
            <%= dates_to_votes_form.check_box :_destroy %>
          <% end %>
          <hr>
        </div>
      <% end %>
    </div>
  </div>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%=  comments_section_title %></h5>
        <p><%= comments_instruction_text %></p>
        <%=form.fields_for :comments do |comments_form| %>
          <div class="form-group">
            <%= comments_form.label :rich_text %>
            <%= comments_form.text_area :rich_text, class: "form-control" %>

            <% if action_name == 'edit' %>
              <%= comments_form.label "Delete"%>
              <%= comments_form.check_box :_destroy %>
            <% end %>
            <hr>
          </div>
        <% end %>
      </div>
    </div>


    <div class="form-group mt-2">
      <%= form.submit submit_btn_text, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>


<% end %>
</div>
