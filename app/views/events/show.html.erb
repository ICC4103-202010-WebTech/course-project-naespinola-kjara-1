<h2 class="text-info">‚ùÑ <%= @event.title%></h2>
<div id="container" >
  <div class="row">
    <div  class="col-3">
      <aside id="profile_links">
        <ul class="table-success" id="links">
          <button type="button" class="list-group-item list-group-item-action p-2">image event</button>
          <select class="custom-select">
            <option selected>Dates to event</option>
            <%@event_dates_to_votes.each_with_index do |event_dates_to_vote,i| %>
            <option value="i"><%=  event_dates_to_vote.date %></option>
            <% end %>
          </select>
          <button type="button" class="list-group-item list-group-item-action p-2">‚ùÑ</button>
          <select class="custom-select">
            <option selected>Guests</option>
            <% @event_guests.each do |event_guest| %>
              <option value="i"><%=event_guest.user.username%></option>
            <% end %>
          </select>
        </ul>
      </aside>
      <div class="row ml-0 mt-2 mb-3">
        <%= link_to "Add Dates", new_event_dates_to_vote_path(@event), class: ["btn", "btn-info"] %>
        &nbsp;
        <%= link_to "Edit Event", edit_event_path, class: ["btn", "btn-primary"] %>
      </div>
    </div>

<div class="col">
<table class="table table-striped" >
  <thead class="table-success">
  <th>
    üìç Location
  </th>
  </thead>
  <tbody>
  <tr>
    <td>
      <%= @event.location %>
    </td>
  </tr>
  </tbody>
</table>
    <table class="table table-striped" >
      <thead class="table-success">
      <th>
      Creation Date
      </th>
      </thead>
      <tbody>
      <tr>
        <td>
          <%= @event.created_at %>
        </td>
      </tr>
      </tbody>
    </table>
    <table class="table table-striped" >
      <thead class="table-success">
      <th>
        Description
      </thead>
      <tbody>
      <tr>
        <td>
          <%= @event.description%>
        </td>
      </tr>
      </tbody>
    </table>
    <table class="table table-striped" >
      <thead class="table-success">
      <th>
        Documents
      </thead>
      <tbody>
      <tr>
        <td>
          Videos <%= @event.videos%>
           .pdf <%= @event.documents%>
        </td>
      </tr>
      </tbody>
    </table>
    <div  class="table-success" >


    <div   class="font-weight-bolder">
      <p class="text-dark" >
       Wall Of Comments
      </p>

    </div>
    </div>

    <div class="list-group">
      <% @event_comments.each do |event_comment| %>
      <a href="#" class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= event_comment.user.username%></h5>
          <small class="text-muted">üåô Created at: <%= event_comment.created_at%></small>
        </div>
        <p class="mb-1"><%= event_comment.rich_text%></p>
        <small class="text-muted">Report</small>
        <small class="text-muted">Reply</small>

      <% end %>
      </a>
    </div>
  <div class="row ml-0 mt-2 mb-3">
    <%= link_to "Add Comment", new_event_comment_path(@event), class: ["btn", "btn-info"] %>

  </div>


  </div>
</div>

<br>
  <div class="btn-group-vertical mb-5 mt-5" role="group" aria-label="Basic example">
    <button type="button" class="btn btn-outline-warning"><%= link_to 'Edit', edit_event_path(@event) %> </button>
    <button type="button" class="btn btn-outline-warning"> <%= link_to 'Back', events_path %> </button>
    <button type="button" class="btn btn-outline-warning"><%= link_to 'Delete',"dates_to_votes#destroy", method: :delete, data: { confirm: 'Are you sure?' } %></button>
    </div>

</div>


