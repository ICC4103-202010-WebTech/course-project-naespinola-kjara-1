<h2 class="text-info"><%= @event.title%></h2><h6>image_event </h6>
<div class="card-deck">
  <div style="max-width: 20rem;" >
  <aside id="event_add">


    <table class="table table-striped" id="event_date">
      <thead>
      <%@event_dates_to_votes.each do |event_dates_to_vote| %>
      <th> Dates of vote</th>
      </thead>
      <tbody>

        <tr>
          <td ><%=  event_dates_to_vote.date %></td>

      <% end %>
        </tr>

        </tbody>
        </table>
    <table class="table table-striped table-dark"  id="event_guest">
      <thead>
      <th> Guest</th>
      </thead>
      <tbody>
      <% @event_guests.each do |event_guest| %>
          <tr>
            <td><%=event_guest.user.username%></td>

      <% end %>
      </tr>

      </tbody>
    </table>

  </aside>
  </div>
  <div class="card text-white bg-dark mb-3"  style="max-width: 50rem;">
<table class="table table-striped table-dark" >
  <thead>
  <th>
    Location
  </th>
  </thead>
  <tbody>
  <tr>
    <td>
      <%= @event.location %>
    </td>
  </tr>
  </tbody>
</table>
    <table class="table table-striped table-dark" >
      <thead>
      <th>
      Creation Date
      </th>
      </thead>
      <tbody>
      <tr>
        <td>
          <%= @event.created_at %>
        </td>
      </tr>
      </tbody>
    </table>
    <table class="table table-striped table-dark" >
      <thead>
      <th>
        Description
      </thead>
      <tbody>
      <tr>
        <td>
          <%= @event.description%>
        </td>
      </tr>
      </tbody>
    </table>
    <table class="table table-striped table-dark" >
      <thead>
      <th>
        Documents
      </thead>
      <tbody>
      <tr>
        <td>
          Videos <%= @event.videos%>
           .pdf <%= @event.documents%>
        </td>
      </tr>
      </tbody>
    </table>
    <dt>‚ùÑ Wall Of Comments ‚ùÑ </dt>
    <div class="list-group">
      <% @event_comments.each do |event_comment| %>
      <a href="#" class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= event_comment.user.username%></h5>
          <small class="text-muted">üåô Created at: <%= event_comment.created_at%></small>
        </div>
        <p class="mb-1"><%= event_comment.rich_text%></p>
        <small class="text-muted">Report</small>
        <small class="text-muted">Reply</small>

      <% end %>
      </a>
    </div>






  </div>
</div>

<br>
</div>
