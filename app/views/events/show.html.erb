<p id="notice"><%= notice %></p>

<h4><%= @event.title%></h4>

<div id="container">
  <aside id="event_add">
    <table id="event_date">
      <thead>
      <th>Dates of vote</th>
      </thead>
      <tbody>
      <%@event_dates_to_votes.each do |event_dates_to_vote| %>
        <tr>
          <td>❄ <%=  event_dates_to_vote.date %></td>

      <% end %>
        </tr>

        </tbody>
        </table>
    <table id="event_guest">
      <thead>
      <th>Guest</th>
      </thead>
      <tbody>
      <% @event_guests.each do |event_guest| %>
          <tr>
            <td><%=event_guest.user.username%></td>

      <% end %>
      </tr>

      </tbody>
    </table>

  </aside>
  <dl id="info_event">
    <dt>Image</dt>
    <dd>❄ Image the event<%= @event.image %> </dd>
    <dt>Location</dt>
    <dd>❄ <%= @event.location %> </dd>
    <dt>Creation Date</dt>
    <dd>❄ <%= @event.created_at %> </dd>
    <dt>Description</dt>
    <dd>❄ <%= @event.description%> </dd>
    <dt>Documents</dt>
    <dd>❄ Videos <%= @event.videos%> </dd>
    <dd>❄ .pdf <%= @event.documents%> </dd>
    <dt>Wall Of Comments</dt>
    <% @event_comments.each do |event_comment| %>
    <dd>❄ User: <%= event_comment.user.username%> </dd>
      <dd>❄ Comment: <%= event_comment.rich_text%> </dd>
      <dd>❄ Created at: <%= event_comment.created_at%> </dd>
    <% end %>
  </dl>

</div>

<br>
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %> |
<%= link_to 'Delete',"dates_to_votes#destroy", method: :delete, data: { confirm: 'Are you sure?' } %>
