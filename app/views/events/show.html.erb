<h3 class="text-info"><%= @event.title%></h3>
<div class="card-deck">
  <div class="card text-white bg-dark mb-3" style="max-width: 20rem;" >
  <aside id="event_add">


    <table class="table table-striped table-dark" id="event_date">
      <thead>
      <%@event_dates_to_votes.each do |event_dates_to_vote| %>
      <th> ❄ Dates of vote</th>
      </thead>
      <tbody>

        <tr>
          <td>🌙 <%=  event_dates_to_vote.date %></td>

      <% end %>
        </tr>

        </tbody>
        </table>
    <table class="table table-striped table-dark"  id="event_guest">
      <thead>
      <th> ❄ Guest</th>
      </thead>
      <tbody>
      <% @event_guests.each do |event_guest| %>
          <tr>
            <td>🌙 <%=event_guest.user.username%></td>

      <% end %>
      </tr>

      </tbody>
    </table>

  </aside>
  </div>
  <div class="card text-white bg-dark mb-3"  >
<table class="table table-striped table-dark" >
  <thead>
  <th>
    ❄ Location ❄
  </th>
  </thead>
  <tbody>
  <tr>
    <th>
      🌙 <%= @event.location %>
    </th>
  </tr>
  </tbody>
</table>
    <table class="table table-striped table-dark" >
      <thead>
      <th>
      ❄ Creation Date ❄
      </thead>
      <tbody>
      <tr>
        <th>
          🌙 <%= @event.created_at %>
        </th>
      </tr>
      </tbody>
    </table>
    <table class="table table-striped table-dark" >
      <thead>
      <th>
        ❄ Description ❄
      </thead>
      <tbody>
      <tr>
        <th>
          🌙<%= @event.description%>
        </th>
      </tr>
      </tbody>
    </table>
    <table class="table table-striped table-dark" >
      <thead>
      <th>
        ❄ Documents ❄
      </thead>
      <tbody>
      <tr>
        <th>
          🌙 Videos <%= @event.videos%>
          🌙 .pdf <%= @event.documents%>
        </th>
      </tr>
      </tbody>
    </table>
    <dt>❄ Wall Of Comments ❄ </dt>
    <div class="list-group">
      <% @event_comments.each do |event_comment| %>
      <a href="#" class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= event_comment.user.username%></h5>
          <small class="text-muted">🌙 Created at: <%= event_comment.created_at%></small>
        </div>
        <p class="mb-1"><%= event_comment.rich_text%></p>
        <small class="text-muted">Report</small>
        <small class="text-muted">Reply</small>

      <% end %>
      </a>
    </div>






  </div>
</div>

<br>
</div>
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %> |
<%= link_to 'Delete',"dates_to_votes#destroy", method: :delete, data: { confirm: 'Are you sure?' } %>
