<p id="notice"><%= notice %></p>
<% @mailboxes.each do |mailbox| %>
  <div>
    <h2 class="text-info">❄ Mailbox ❄</h2>
    <p>Welcome! ❄ <%=mailbox.user.username %></p>
  </div>

  <div id="container">
    <div class="row">
      <div class="col-3">
        <ul id="links">
          <% @messages.each_with_index  do |message,i| %>
          <dt>Messages </dt>
          <button type="button" class="list-group-item list-group-item-action p-2">❄ user_id <%= message.user_transmitter_id%> </button>

            </ul>
            </div>
            <div class="col">
      <table  class="table table-striped table-dark"id = all_messages>
        <thead>
        <th>
          N
        </th>
        <th>
          Name
        </th>
        <th>
          Text
        </th>
        </thead>
        <tbody>
        <tr>

          <td><%= i+1%></td>
          <td> user_id  <%= message.user_transmitter_id%> </td>
          <td><%= message.text_message%></td>

        </tr>
        </tbody>
    <%end %>
    </table>

          </div>
</div>
    </div>




