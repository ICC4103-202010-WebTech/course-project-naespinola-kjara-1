<div class="row ml-0">
  <%= form_with(model: message, local: true) do |form| %>
    <% if message.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

        <ul>
          <% message.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="form-group">
    <%= form.label :user_receiver , class:"text-success font-weight-bold"%>
    <%= form.collection_select(:user_receiver, User.all.order(username: :asc), :id, :username, {}, { class: "form-control" }) %>
  </div>
  <div class="form-group">
    <%= form.label :user_transmitter , class:"text-success font-weight-bold"%>
    <%= form.collection_select(:user_transmitter, User.all.order(username: :asc), :id, :username, {}, { class: "form-control" }) %>
  </div>
  <div class="form-group">
    <%= form.label :text_message , class:"text-success font-weight-bold"%>
    <%= form.text_area :text_message, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: ["btn", "btn-primary"] %>
  </div>
  <% end %>
</div>

