<div class="row ml-0">
  <%= form_with(model: message, local: true) do |form| %>
<div class="form-group">
  <%=form.hidden_field :user_transmitter_id, :value => current_user.id %>
</div>
  <div class="form-group">
    <%= form.label :user_receiver , class:"text-success font-weight-bold"%><br>
    <%= form.collection_select(:user_receiver_id, @user_receiver, :id, :username, {}, { class: 'select' }) %>
  </div>

  <div class="form-group">
    <%= form.label :text_message , class:"text-success font-weight-bold"%>
    <%= form.text_area :text_message, class: "form-control" %>
  </div>

 <div class="form-group">
   <%=form.submit "Send",  class: ["btn", "btn-primary"] %>
   <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>

 </div>
  <% end %>
</div>
<br>
<br>
