<div class="row ml-0">
  <%= form_with(model: organization, local: true) do |form| %>
    <%= errors_for organization %>
    <div class="form-group">
      <%= form.label :name, class:"text-success font-weight-bold" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description, class:"text-success font-weight-bold" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :image_banner, class:"text-success font-weight-bold" %>
      <%= form.file_field :image %>
    </div>
    <div class="form-group mt-2">
      <%= form.submit class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>

  <% end %>
</div>
