<div class="row ml-0">
  <%= form_with(model: organization, local: true) do |form| %>
    <%= errors_for organization %>
    <div class="form-group">
      <%= form.label :name, class:"text-success font-weight-bold" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description, class:"text-success font-weight-bold" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :image_banner, class:"text-success font-weight-bold" %>
      <%= form.file_field :image %>
    </div>
    <div class="form-group">
      <%= form.label :documents,class:"text-success font-weight-bold" %>
      <%= form.file_field :documents, multiple: true %>
    </div>
    <div class="form-group">
      <%= form.label :videos,class:"text-success font-weight-bold" %>
      <%= form.file_field :videos, multiple: true %>
    </div>
    <div class="form-group">
      <%= form.label :images ,class:"text-success font-weight-bold"%>
      <%= form.file_field :pictures, multiple: true %>
    </div>

    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-info">Members the organization</h5>
        <p class="text-success">Members</p>
        <%=form.fields_for :members do |member_form| %>
          <div class="form-group">
            <%= member_form.label :user_id ,class:"text-success font-weight-bold"%>
            <%=member_form.text_field :user_id, class: "form-control" %>

              <%= member_form.label :Admin?, class:"text-success font-weight-bold" %>
              <%= member_form.check_box  :is_admin_org, class: "form-control" %>


            <% if action_name == 'edit' %>
              <%= member_form.label "Delete",class:"text-success font-weight-bold"%>
              <%= member_form.check_box :_destroy %>
            <% end %>
            <hr>
          </div>
        <% end %>
      </div>
    </div>


    <div class="form-group mt-2">
      <%= form.submit submit_btn_text, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>


  <% end %>
</div>
