<p id="notice"><%= notice %></p>

<h1>Organizations</h1>


<table  class="table table-striped table-dark" id="organizations">
  <thead>
  <th>
    N
  </th>
  <th>
    Name
  </th>
  <th>
    Description
  </th>
  <tbody>
  <%  @organizations.each_with_index do |organization, i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= link_to organization.name, organization%></td>
      <td><%=organization.description %></td>
    </tr>
    <%end %>
  </tbody>
  </thead>
</table>
<br>

<%= link_to 'New Organization', new_organization_path %>
