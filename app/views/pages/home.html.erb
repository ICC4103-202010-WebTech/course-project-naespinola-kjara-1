<h4>Upcoming Events</h4>
<table style="width:100%">
  <thead>
  <th>N</th>
  <th>Event</th>
  <th>Description</th>
  </thead>
  <tbody>
  <% @events.each_with_index do |event, i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= link_to event.title,event %></td>
      <td><%= event.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<h4>Organizations</h4>
<table id="organizations">
  <thead>
  <th>
    N
  </th>
  <th>
    Name
  </th>
  <th>
    Description
  </th>
  <tbody>
  <%  @organizations.each_with_index do |organization, i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= link_to organization.name, organization%></td>
      <td><%=organization.description %></td>
    </tr>
  <%end %>
  </tbody>
  </thead>
</table>