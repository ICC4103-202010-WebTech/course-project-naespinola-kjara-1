<h3 class="text-info font-weight-bold mr-3">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  🔍 Search Result</h3>
<% if @events.length > 0  %>
  <div class="row ml-0 mt-2">
    <p class="text-success font-weight-bold"><%=@events.length %> matches found.</p>
  </div>
  <%=render partial: "events/event_list", locals: { events: @events } %>

  <% elsif @organizations.length > 0  %>
  <div class="row ml-0 mt-2">
    <p class="text-success font-weight-bold"><%=@organizations.length %> matches found.</p>
  </div>
  <%=render partial: "organizations/organization_list", locals: { organizations: @organizations } %>

<% elsif @users.length > 0  %>
  <div class="row ml-0 mt-2">
    <p class="text-success font-weight-bold"><%=@users.length %> matches found.</p>
  </div>
  <%=render partial: "users/user_list", locals: { users: @users} %>

<% else%>
  <div class="row ml-0 mt-2">
    <p class="text-success font-weight-bold">No matches found.</p>
  </div>
<% end %>

<% if @events_by_creator.length > 0  %>
  <p class="text-success font-weight-bold"> Matches found (events) .</p>
  <div class="row ml-0 mt-2">
 <% @events_by_creator.each do |result| %>
     <p class="text-success font-weight-bold"> •  <%= link_to result.title , result   %>  •  </p>
    <% end %>
</div>

<%end %>
<%=render partial: "events/event_list", locals: { event: @events_by_creator} %>



<% if @events_by_org.length > 0  %>
  <p class="text-success font-weight-bold">Matches found (events) .</p>
  <div class="row ml-0 mt-2">
    <% @events_by_org.each do |result| %>
      <p class="text-success font-weight-bold"> •   <%= link_to result.title , result   %> • </p>
    <%end %>
      </div>

      <%=render partial: "events/event_list", locals: { event: @events_by_org} %>

<% end %>

