<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <div class = "h-25 d-inline-block bg-info" size="wide: 400px;">
      <%= link_to image_tag(user.image.thumb.url, class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef"), url_for(user) %>
    </div>
    <div class="card-body">
      <p class="card-text"><%= link_to user.username, user %></p>
      <p class="card-text"><%= user.name %> <%= user.last_name %></p>

      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", user %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_user_path(user) %></button>
        </div>
          </div>
    </div>
  </div>
</div>