<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <div class = "h-25 d-inline-block bg-info" size="wide: 400px;">
      <%= image_tag(user.image.thumb.url, class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
    </div>
    <div class="card-body">
      <p class="card-text text-success "><%= user.username%></p>
      <p class="card-text  text-success"><%= user.name %> <%= user.last_name %></p>
      <p class="card-text text-success"><%= user.location%> </p>
      <p class="card-text  text-success"><%= user.short_bio %> </p>
      <p class="card-text  text-success"> Last access:
        <% if user.last_sign_in_at %>
          <%= user.last_sign_in_at %>
        <% else %>
           Not logged in
        <% end %>
      </p>
      <p class="card-text  text-success"> User
        <% var = false %>
        <% user.members.each do |mem| %>
          <% if mem.is_admin_org %>
            <% var = true %>
          <% end %>
        <% end %>
        <% if var %>
          Admin of organization
        <% else %>
          Recurring user
        <% end %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%if admin_signed_in?  %>
            <button type="button" class="btn btn-sm btn-outline-secondary">
              <%= link_to " Edit ", edit_user_path(user), class: "btn btn-sm btn-outline-white text-secondary"%>
            </button>
            <button type="button" class="btn btn-sm btn-outline-secondary">
              <%= button_to "Admin Account",  edit_user_registration_path, class: "btn btn-sm btn-outline-white text-secondary"%>
            </button>
          <%end %>
        </div>
      </div>
    </div>
  </div>
</div>