<p id="notice"><%= notice %></p>

<h2 class="text-info"> 🗓️ Vote  </h2>

<div id="container">
  <div class="row">
    <div class="col-3">


        <ul id="links">
          <% @votes.each do |vote| %>
          <button type="button" class="list-group-item list-group-item-action p-2"> <%= vote.dates_to_vote.event.title%></button>
      <% end %>
      </ul>
    </div>
    <div class="col">


    <table class="table table-striped" id="all_dates">
      <thead class="table-success">
      <th>
        N
      </th>
      <th>
        Created at
      </th>
      <th>
        Date
      </th>
      <th>
        Event
      </th>
      </thead>
      <tbody>
      <% @votes.each_with_index do |vote,i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= vote.created_at%></td>
        <td><%=vote.dates_to_vote.date %> </td>
        <td><%=vote.dates_to_vote.event.title %> </td>
      <%end %>
      </tr>
      </tbody>
    </table>


</div>
</div>
</div>
</div>
<br>


<%= link_to 'Destroy', @vote, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Show', @vote %>

